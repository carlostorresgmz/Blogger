<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/listado_padding"
    android:background="@color/md_grey_200">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_50"
        app:cardCornerRadius="@dimen/item_entrada_radius"
        app:cardElevation="@dimen/item_entrada_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ln_itementrada_contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/listado_item_margin"
            android:layout_marginLeft="@dimen/listado_item_margin"
            android:layout_marginRight="@dimen/listado_item_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_entrada_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_entrada_autor_size"
                android:textColor="@color/md_grey_900"/>

            <TextView
                android:id="@+id/tv_item_entrada_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_entrada_fecha_size"
                android:textColor="@color/md_grey_700"/>

            <View android:layout_width="match_parent"
                android:layout_height="@dimen/item_line_1"
                android:background="@color/md_grey_200"/>

            <TextView
                android:id="@+id/tv_item_entrada_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_entrada_titulo_mt"
                android:textSize="@dimen/item_entrada_titulo_size"
                android:textColor="@color/md_grey_700"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/tv_item_entrada_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_entrada_desc_mt"
                android:textSize="@dimen/item_entrada_desc_size"
                android:textColor="@color/md_grey_600"/>

            <Button
                android:id="@+id/btn_item_entrada_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/listado_item_margin_botom"
                android:textSize="@dimen/item_btn_txt_size"
                android:text="@string/txt_item_btn"
                android:paddingStart="@dimen/cero_dp"
                android:paddingEnd="@dimen/cero_dp"
                android:textColor="@color/colorPrimary"
                android:gravity="start|center_vertical"
                style="?android:attr/borderlessButtonStyle"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>